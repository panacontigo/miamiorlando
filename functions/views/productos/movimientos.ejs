
    <div class="container mt-4">
        <h1>Detalles del Producto</h1>
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Información del Producto</h5>
            </div>
            <div class="card-body">
                <p><strong>Nombre:</strong> <%= producto.name %></p>
                <p><strong>Descripción:</strong> <%= producto.description %></p>
                <p><strong>Stock:</strong> <%= producto.stock %></p>
                <p><strong>Ubicación:</strong> <%= producto.location %></p>
                <p><strong>Costo:</strong> $<%= producto.cost %></p>
                <p><strong>Precio:</strong> $<%= producto.price %></p>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Movimientos del Producto</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Precio Venta</th>
                            <th>Proveedor/Cliente</th>
                            <th>Observaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% movimientos.forEach(function(movimiento) { %>
                            <tr>
                                <td><%= new Date(movimiento.createdAt).toLocaleDateString() %></td>
                                <td><%= movimiento.tipo %></td>
                                <td><%= movimiento.cantidad %></td>
                                <td>$<%= movimiento.precio_unitario %></td>
                                <td>$<%= movimiento.precio_venta %></td>
                                <td><%= movimiento.proveedor || movimiento.cliente %></td>
                                <td><%= movimiento.observaciones %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
